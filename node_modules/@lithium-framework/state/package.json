{
  "name": "@lithium-framework/state",
  "version": "1.2.0",
  "description": "lithium state",
  "main": "dist/main.js",
  "module": "dist/module.js",
  "types": "dist/types.d.ts",
  "private": false,
  "public": false,
  "scripts": {
    "test": "npx jest",
    "test:watch": "npx jest --watchAll",
    "build:doc": "typedoc --plugin typedoc-plugin-markdown --out docs src/index.ts",
    "build:dev": "node ./scripts/generate-tsconfig.cjs && tsc --watch",
    "build:prod": "NODE_ENV=production node ./scripts/generate-tsconfig.cjs && npx tsc",
    "clear:dist": "rm -rf dist",
    "clear:cache": "rm -rf .parcel-cache",
    "clear": "npm run clear:dist && npm run clear:cache",
    "watch": "npm run clear && parcel watch src/index.ts --log-level verbose",
    "build": "npm run clear && parcel build src/index.ts --log-level verbose"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lithium-framework/state.git"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/preset-env": "^7.24.4",
    "@parcel/packager-ts": "^2.12.0",
    "@parcel/transformer-typescript-types": "^2.12.0",
    "@thesheps/jest-md-reporter": "^0.0.8",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "tslib": "^2.6.2",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.24.7",
    "@microsoft/fast-element": "^2.0.0-beta.26",
    "parcel": "^2.12.0"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "lithium",
    "framework",
    "web",
    "webapp",
    "webcomponent",
    "javascript",
    "typescript"
  ]
}
